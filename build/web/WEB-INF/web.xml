<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotServlet</servlet-name>
        <servlet-class>ForgotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgetServlet</servlet-name>
        <servlet-class>ForgetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncryptServlet</servlet-name>
        <servlet-class>EncryptServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DecryptServlet</servlet-name>
        <servlet-class>DecryptServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompareServlet</servlet-name>
        <servlet-class>CompareServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MergeServlet</servlet-name>
        <servlet-class>MergeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SplitServlet</servlet-name>
        <servlet-class>SplitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogoutServlet</servlet-name>
        <servlet-class>UserLogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <servlet-class>UpdatePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotServlet</servlet-name>
        <url-pattern>/ForgotServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetServlet</servlet-name>
        <url-pattern>/ForgetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncryptServlet</servlet-name>
        <url-pattern>/EncryptServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DecryptServlet</servlet-name>
        <url-pattern>/DecryptServlet</url-pattern>
    </servlet-mapping>
    <dependencies>
        <dependency>
            <groupId>
          com.sun.mail
        </groupId>
            <artifactId>
              javax.mail
          </artifactId>
            <version>
              1.6.2
          </version>
        </dependency>
    </dependencies>
    <servlet-mapping>
        <servlet-name>CompareServlet</servlet-name>
        <url-pattern>/CompareServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MergeServlet</servlet-name>
        <url-pattern>/MergeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SplitServlet</servlet-name>
        <url-pattern>/SplitServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogoutServlet</servlet-name>
        <url-pattern>/UserLogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <url-pattern>/UpdatePasswordServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>
